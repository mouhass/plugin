
<div class="row" style="margin: auto;
  width: 50%;

  padding: 10px; ">

    <div class="well">
        {{ form_start(form) }}
        <legend><i  aria-hidden="true"></i> Le code du job cron</legend>
        <div class="h3 mb-0 text-gray-800">{{ JobCron.code }}</div>

        <legend><i aria-hidden="true"></i> Description du job cron</legend>
        <div class="h3 mb-0 text-gray-800">{{ form_widget(form.description) }}</div>

        <legend><i aria-hidden="true"></i> Nom du job cron</legend>
        <div class="h3 mb-0 text-gray-800">{{ form_widget(form.name) }}</div>
        <legend><i  aria-hidden="true"></i> Expression</legend>
        <div class="h3 mb-0 text-gray-800">{{ form_widget(form.expression) }}</div>
        <legend><i aria-hidden="true"></i> Etat du job</legend>
        <div class="h3 mb-0 text-gray-800">{{ form_widget(form.state) }}</div>
        <legend><i  aria-hidden="true"></i> Actif </legend>
        <div class="h3 mb-0 text-gray-800">{{ form_widget(form.actif) }}</div>

        <legend><i  aria-hidden="true"></i> Email destinataire </legend>
        <div class="h3 mb-0 text-gray-800">{{ form_widget(form.emailAdminCron) }}</div>


        <legend><i  aria-hidden="true"></i> Le créateur </legend>
        <div class="h3 mb-0 text-gray-800">{{ app.user.name }}</div>
        <legend><i  aria-hidden="true"></i> La commande à exécuter </legend>
        <div class="h3 mb-0 text-gray-800">{{ form_widget(form.scriptExec) }}</div>
        <br>
        <button class="btn btn-primary">{{ button_label|default('Save') }}</button>
        <a class="btn btn-warning" href="{{ path('app_jobCron_index') }}">Retour</a>
        {{ form_end(form) }}
    </div></div>

